<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/atm"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"/>


    <TextView
        android:id="@+id/tv_namaAtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignTop="@+id/icon"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/tv_alamatAtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_below="@+id/tv_namaAtm"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/tv_informasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi"
        android:textColor="#000000"
        android:textSize="11dp"
        android:layout_below="@+id/tv_alamatAtm"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:textColor="#000000"
        android:textSize="11dp"
        android:layout_below="@+id/tv_informasi"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:textColor="#000000"
        android:textSize="11dp"
        android:layout_below="@+id/tv_latitude"
        android:layout_marginLeft="70dp" />


</RelativeLayout>